# Elasticsearch Configuration
ELASTICSEARCH_URL=https://your-project.es.us-central1.gcp.elastic.cloud:443
ELASTICSEARCH_API_KEY=your_elasticsearch_api_key_here

# Kibana URL
# Optional for Elastic Cloud (auto-derived from ELASTICSEARCH_URL by replacing '.es.' with '.kb.').
# Required for self-hosted clusters where that URL convention does not apply.
KIBANA_URL=

# Elastic Workflows
# Set to 'true' when a real Elastic Workflows connector is configured.
# When unset or 'false', workflowTool() runs in simulation mode and logs a warning.
ELASTIC_WORKFLOWS_ENABLED=false

# Server Configuration
PORT=5000
NODE_ENV=development

# AWS Bedrock Configuration (Claude AI for agent reasoning)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
BEDROCK_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0

# Application Settings
LOG_LEVEL=info
MAX_CONCURRENT_TICKETS=10
AUTO_RESOLVE_THRESHOLD=0.85
